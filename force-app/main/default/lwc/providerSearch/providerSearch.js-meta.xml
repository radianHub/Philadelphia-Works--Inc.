<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Provider Search</masterLabel>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property
				name="title"
				type="String"
				label="Title"
				default="Browse Programs"
			/>
            <property
				name="description"
				type="String"
				label="Description"
				default="Find a program that fits your needs."
			/>
			<property
				name="searchFiltersFieldSetApiName"
				type="String"
				label="Search Filters Field Set API Name"
				placeholder="Search_Filters_Field_Set"
				default="Default_Provider_Search_Field_Set"
				description="Field Set API Name of search filter fields from Launchpad__Job__c object"
			/>
			<property
				name="detailsFieldSetApiName"
				type="String"
				label="Details Field Set API Name"
				placeholder="Details_Field_Set"
				default="Default_Provider_Search_Field_Set"
				description="Field Set API Name of detail fields from Launchpad__Job__c object"
			/>
            <property
				name="headerColor"
				type="Color"
				default="rgb(84, 105, 141)"
				label="Header Color"
			/>
			<property
				name="cardHeaderColor"
				type="Color"
				default="rgb(84, 105, 141)"
				label="Card Header Color"
			/>
			<property
				name="cardBodyBgColor"
				type="Color"
				default="rgb(235, 235, 235)"
				label="Card Body Background Color"
			/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>